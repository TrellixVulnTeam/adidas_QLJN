        {{#each contents}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-contents-item">
                <a href="/products/{{this.slug}}">
                    <img class="card-img-top block-image" src="{{this.image}}" alt="Card image cap">
                    <img class="card-img-top hover-image" src="{{this.imageHover}}" alt="Card image cap">
                </a>
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.price}}</p>
                    <a href="/products/{{this.slug}}" class="btn btn-dark">Buy</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

</div>

